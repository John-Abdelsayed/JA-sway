// -*- mode: jsonc -*-
[{
    "name": "top",
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 30, // Auto-height is used when commented
    // "width": 1280, // Full screen width when commented
    "spacing": 6, // Gaps between modules (in px)
    // See `man waybar` for more configuration options

// Configuration - modules-left
    "modules-left": [
            "sway/scratchpad",
            "mpd",
            "custom/media"
        ],
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

// Configuration - modules-center

    "modules-center": [
        "sway/window"
    ],
    "sway/window": {
        "format": "{}",
        //"all-outputs": true, // Active window shows only on active display when commented
        "max-length": 120
    },

// Configuration - modules-right

    "modules-right": ["group/hardware",
        "custom/grimshot",
        "custom/wfrecord",
        "custom/vm",
        "custom/containers"
    ],
        "group/hardware": {
                "orientation": "inherit",
                "drawer": {
                   "transition-duration": 500,
                   "children-class": "hardware",
                   "transition-left-to-right": false,
                },
                "modules": [
                    "temperature",
                    "battery",
                    "cpu",
                    "memory",
                    "network",
                    "custom/keyboard-layout",
                    "keyboard-state"
                ]
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "cpu": {
        "interval": 5,
        "format": "Ôíº{usage:>3}%",
        "states": {
            "warning": 70,
            "critical": 90,
        },
        "on-click": "footclient -T waybar_htop -e htop"
    },
    "memory": {
        "interval": 5,
        "format": "ÓøÖ{:>3}%",
        "on-click": "footclient -T waybar_htop -e htop", 
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "network": {
        "format-disabled": "ÔÅ± Disabled",
        "format-wifi": "Ôá´ {bandwidthDownBits:>} Û∞∂° {bandwidthUpBits:>} Û∞∂£",
        "tooltip-format-wifi": "{essid}",
        "format-ethernet": "Û∞àÄ {bandwidthDownBits:>} Û∞∂° {bandwidthUpBits:>} Û∞∂£",
        "tooltip-format-ethernet": "{ifname}: {ipaddr}/{cidr}",
        "format-disconnected": "ÔÅ± Disconnected",
        "on-click": "footclient -T waybar_nmtui -e nmtui",
        "interval": 2
    },
    "custom/keyboard-layout": {
      	"exec": "i=$(swaymsg -t get_inputs); echo \"\"; echo \"$i\" | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
        "format": "ÔÑú",
        // Interval set only as a fallback; use signal to update the module more immediately
        "interval": 30,
        // See example config for sending signal to Waybar in ~/.config/sway/config.d/input
        "signal": 1,
        "on-click": "~/.config/waybar/scripts/keyhint.sh"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "custom/grimshot": {
        "format": "ÔÇÉ",
        "tooltip": false,
        "on-click": "grimshot --notify save output - | swappy -f -",
        "on-click-middle": "grimshot --notify save area - | swappy -f -",
        "on-click-right": "grimshot --notify save window - | swappy -f -"
    }, 
    "custom/wfrecord": {
        "format": "ÔÄΩ",
        "tooltip": false,
        "interval": "once",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/wfrecord-monitor.sh",
        "on-click": "~/.config/waybar/scripts/wfrecord-record.sh",
        "on-click-right": "~/.config/waybar/scripts/wfrecord-stop.sh",
        "signal": 8
    },
    "custom/vm": {
        "format": "  Ôâç ",
        "interval": 10,
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/kvm-monitor.sh",
        "on-click": "~/.config/waybar/scripts/kvm.sh"
    },
    "custom/containers": {
        "format": "  ÔÜ≤ ",
        "interval": 10,
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/containers-monitor.sh"
    }
},
// Bottom
{
    "name": "bottom",
